<odoo>
    <data>


        <record id="stock_picking_form_inherit_customer" model="ir.ui.view">
            <field name="name">stock.picking.inherit.surgitech.customer</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="customer_order_ref" force_save="1"/>
                    <field name="area_manager" force_save="1"/>
                    <field name="hospital" force_save="1"/>
                    <field name="sales_person_id" force_save="1"/>
                    <field name="delivery_date" force_save="1"/>
                </xpath>
            </field>
        </record>


        <record id="form_view_sale_order_inherit_page_customer" model="ir.ui.view">
            <field name="name">name.sale.order.inherit.page.customer</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="customer_order_ref"/>
                    <field name="is_ref_order" invisible="1"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>